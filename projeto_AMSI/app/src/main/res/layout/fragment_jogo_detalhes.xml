<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagem do jogo -->
        <ImageView
            android:id="@+id/imgGame"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Imagem do jogo"/>

        <!-- Conteúdo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome -->
            <TextView
                android:id="@+id/txtGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Jogo"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <!-- Categoria -->
            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <!-- Dificuldade -->
            <TextView
                android:id="@+id/txtDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dificuldade: Média"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Descrição -->
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do jogo. Aqui aparece a história ou explicação do quiz."
                android:textSize="14sp"/>

            <!-- Botão jogar -->
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_marginTop="32dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
